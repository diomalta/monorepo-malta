generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model User {
  id        String  @default(uuid()) @id
  name      String
  email     String  @unique
  username  String?
  password  String
  role      Role    @default(USER)
  token     String?
  clients   Client[]
}

model Client {
  id        Int     @default(autoincrement()) @id
  name      String
  email     String
  birthday  DateTime?
  userId    String?
  user      User?   @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}
